{% extends "admin-template.html.jinja" %}


{% block title %}
All Orders
{% endblock %}

{% block content %}

<br />
<h2 class="heading text-center text-monospace">Orders</h2>
<br />

<div class="table-responsive">
<table class="table mx-auto">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ORDER ID</th>
      <th scope="col">PRODUCT NAME</th>
      <th scope="col">CUSTOMER NAME</th>
      <th scope="col">ADDRESS</th>
      <th scope="col">EMAIL</th>
      <th scope="col">PAYMENT</th>
      <th scope="col">TOTAL PRICE</th>
    </tr>
  </thead>
  <tbody>
    {% for order in orders %}
    <tr>
      <th scope="row">{{order.order_id}}</th>
      <td>{{order.product_name}}</td>
      <td>{{order.cudtomer_name}}</td>
      <td>{{order.customer_email}}</td>

      <td><img src="static/images/{{product.product_image}}" height="50px" width="50px"></td>
     <td>
      <a href="{{url_for('adminController.editProduct')}}" type="submit" class="btn btn-primary">Edit</a>
      <a href="{{url_for('adminController.deleteProduct', productname=product.product_name)}}" type="submit" class="btn btn-danger" >Delete</a>
    </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}