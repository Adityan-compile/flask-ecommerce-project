{% extends "admin-template.html.jinja" %}


{% block title %}
Dashboard
{% endblock %}

{% block content %}

<br />
<h2 class="heading text-center text-monospace">Products</h2>
<br />

<div class="table-responsive">
<table class="table mx-auto">
  <thead class="thead-dark">
    <tr>
      <th scope="col">S.NO</th>
      <th scope="col">PRODUCT NAME</th>
      <th scope="col">PRODUCT ID</th>
      <th scope="col">PRODUCT PRICE</th>
      <th scope="col">PRODUCT IMAGE</th>
      <th scope="col">EDIT/DELETE PRODUCT</th>
    </tr>
  </thead>
  <tbody>
    {% for x in products %}
    <tr>
      <th scope="row">{{products.serial_number}}</th>
      <td>{{products.product_name}}</td>
      <td>{{products.product_id}}</td>
      <td>{{products.product_price}}</td>
      <td><img src="static/images/"+{{products.product_image}} height="50px" width="50px"></td>
     <td>
       <a href="{{url_for('admintasks')}}" class="btn btn-primary">Edit</a>
      <a href="{{url_for('admintasks')}}" class="btn btn-danger" >Delete</a>
    </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}