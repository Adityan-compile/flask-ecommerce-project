{% extends "admin-template.html.jinja" %}


{% block title %}
Dashboard
{% endblock %}

{% block content %}

<br />
<h2 class="heading text-center text-monospace">Products</h2>
<br />

<div class="table-responsive">
<table class="table mx-auto">
  <thead class="thead-dark">
    <tr>
      <th scope="col">S.NO</th>
      <th scope="col">PRODUCT NAME</th>
      <th scope="col">PRODUCT ID</th>
      <th scope="col">PRODUCT PRICE</th>
      <th scope="col">PRODUCT IMAGE</th>
      <th scope="col">EDIT/DELETE PRODUCT</th>
    </tr>
  </thead>
  <tbody>
    {% for product in products %}
    <tr>
      <th scope="row">{{product.serial_number}}</th>
      <td>{{product.product_name}}</td>
      <td>{{product.product_id}}</td>
      <td>{{product.product_price}}</td>
      <td><img src="static/images/{{product.product_image}}" height="50px" width="50px"></td>
     <td>
       <form action="{{url_for('editProduct')}}" method="post">
           <a href="" type="submit" class="btn btn-primary">Edit</a>
       </form>
       <form action="{{url_for(deleteProduct)}}" method="POST">
      <a href="" type="submit" class="btn btn-danger" >Delete</a>
      <input type="hidden" name="productName" value="{{product.product_name}}">
      </form>
    </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}